<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="333dp"
        android:layout_height="250dp"
        android:background="@drawable/rounded_corners_two"
        android:src="@drawable/fox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/darkgreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="349dp"
        android:layout_height="78dp"
        android:fontFamily="serif"
        android:text="Most Shared:"
        android:textAlignment="center"
        android:textColor="@color/darkgreen"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041"
        tools:text="Most Shared:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="349dp"
        android:layout_height="78dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="408dp"
        android:fontFamily="serif"
        android:text="Friend Activity:"
        android:textAlignment="center"
        android:textColor="@color/darkgreen"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Friend Activity:" />

    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="290dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/rounded_green_background"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Deer"
                android:scaleType="centerCrop"
                android:src="@mipmap/deer" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:contentDescription="Duck"
                android:scaleType="centerCrop"
                android:src="@mipmap/duck" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Hedgehog"
                android:scaleType="centerCrop"
                android:src="@mipmap/hedgehog" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Panda"
                android:scaleType="centerCrop"
                android:src="@mipmap/panda" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Rabbit"
                android:scaleType="centerCrop"
                android:src="@mipmap/rabbit" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="Squirrel"
                android:scaleType="centerCrop"
                android:src="@mipmap/squirrel" />

        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
